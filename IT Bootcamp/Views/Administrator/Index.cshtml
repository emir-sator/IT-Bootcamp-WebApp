@using RS1SeminarskiRad2020.Models
@model List<RS1SeminarskiRad2020.ViewModels.UserRolesVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Korisničke uloge</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Ime</th>
            <th>Prezime</th>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Ime</td>
                <td>@user.Prezime</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Administrator" asp-action="Manage" asp-route-userId="@user.UserId">Dodijeli ulogu</a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Administrator" asp-action="Upravljanje" class="btn btn-danger">Nazad</a>